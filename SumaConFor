#include <iostream>

using namespace std;

int main()
{
    int suma=0, n=0;
    cout<<"INGRESE LA CANTIDAD DE VALORES A SUMAR: ";
    cin>>n;
    for (int i=0; i<n; i++){
        suma=suma+i;
    }
    cout<<"La suma es: "<<suma;
    return 0;
}
