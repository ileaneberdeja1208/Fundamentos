#include <iostream>

using namespace std;

int main()
{
    int a,b,c,d,e,f; 
    cout<< "ingresar el primer comando: ";
    cin>> a;
    cout<< "ingresar el segundo comando: ";
    cin>> b;
    c=a+b;
    d=a-b;
    e=a*b;
    f=a/b;
    cout<< "la suma es: "<<c<< endl;
    cout<< "la resta es: "<<d<< endl;
    cout<< "la multi´plicación es: "<<e<< endl;
    cout<< "la división es: "<<f<< endl;

    return 0;
}
