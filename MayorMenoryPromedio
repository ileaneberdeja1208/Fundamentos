#include <iostream>

using namespace std;

int main()
{
    int n, mayor, i, menor, numero;
    float promedio, suma;
    cout<<"Ingrese la cantidad n de numeros: ";
    cin>> n;
    i=1;
    suma=0;
    cout<< "Ingrese un valor: ";
    cin>>numero;
    mayor=numero;
    menor= numero;
    while (i<=n)
    {
        i=i+1;
        suma=suma+numero;
        if (mayor<numero)
        mayor=numero;
        if (menor>numero)
        menor=numero;
        if (i<=n){
        cout<<"Ingresa un valor: ";
        cin>> numero;
        }
        
    }
    cout<<"el mayor es:"<< mayor<<endl;
    cout<<"el menor es:"<< menor<<endl;
    cout<<"el promedio es:"<< suma/n;
    
    return 0;
}
