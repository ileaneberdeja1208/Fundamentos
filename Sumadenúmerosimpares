#include <iostream>

using namespace std;

int main()
{
    int suma=0, n=0;
    cout<<"Suma de nÃºmeros iguales entre 1 y... ";
    cin>>n;
    for (int i=1; i<=n; i=i+2){
        suma=suma+i;
    }
       cout<<"La suma total es: "<<suma<<endl;
    return 0;
}
