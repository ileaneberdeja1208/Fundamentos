#include <iostream>
#include "conio.h"
#include "math.h"

using namespace std;

int main()
{
    float I,C,N,T,s,k;
    cout<< "Ingresa el monto del capital:";
    cin>>C;
    cout<< "Ingresa el porcentaje de interés sin necesidad de símbolos: ";
    cin>>T;
    cout<< "Ingresa la cantidad de tiempo trancurrido en años: ";
    cin>>N;
    T=(T/100);
    s=(1+T);
    k=pow(s,N);
    I=(C*k);
    cout<< "El interés compuesto es: "<<I;
    return 0;
}
