#include <iostream>

using namespace std;

int main()
{
    int n, suma,i;
    cout<<"SUMADOR DE NÚMEROS NATURALES"<<endl;
    cout<<"Ingresa la cantidad de números que quieres sumar"<<endl;
    cin>>n;
    suma=0;
    i=0;
    while (n>=i){
    suma=suma+i;
    i=i+1;
    }
    cout<<"La suma es igual a: "<<suma;
    return 0;

}

