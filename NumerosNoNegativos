#include <iostream>

using namespace std;

int main()
{
    int n, i=0, mayor, menor;
    float suma;
    suma=0;
    cout<<"Ingresar un número entero: ";
    cin>>n;
    mayor=n;
    menor=n;
    do{
        suma=suma+n;
        if (mayor<n)
        mayor=n;
        if (menor>n)
        menor=n;
        i++;
        cout<<"Ingresar un número entero: ";
        cin>>n;
    }while (n>=0);
    cout<<"El mayor es: "<<mayor<<endl;
    cout<<"El menor es: "<<menor<<endl;
    cout<<"El promedio es: "<<suma/i<<endl;

    return 0;
}
