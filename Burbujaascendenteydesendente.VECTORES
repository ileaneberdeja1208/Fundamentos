void cargar(int A[], int n){
    for (int i=0; i<n; i++)
   { 
      cout<< "Vector["<<i<<"]: ";
      cin>>A[i];
    }
}

void burbuja(int A[], int n){
    int aux;
    for (int i=0; i<n-1; i++)
    for (int j=i+1; j<n; j++)
    if(A[i]>A[j]){
        aux=A[i];
        A[i]=A[j];
        A[j]=aux;
    }
}
void burbujadesendente(int A[], int n){
