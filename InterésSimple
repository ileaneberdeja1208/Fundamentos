#include<iostream>
using namespace std;
int main() {
	float c;
	float i;
	float t;
	float n;
	cout << "CALCULADOR DE INTERÉS ANUAL" << endl;
	// interes=capital*tasadeinteres*tiempo
	cout << "Ingrese el monto prestado:" << endl;
	cin >> c;
	cout << "Ingrese la tasa de interés sin símbolo:" << endl;
	cin >> t;
	cout << "Ingrese el periodo de tiempo en años: " << endl;
	cin >> n;
	i = (c*(t*0.01)*n);
	cout << "El interés anual es :" << i << " Bs."<<endl;
	return 0;
}
